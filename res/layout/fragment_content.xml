<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.example.zhbeijing.view.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg" 
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbn_content_Home"
            style="@style/style_tab_bottom"
            android:drawableTop="@drawable/tab_home_selector"
            android:text="首页" />
        <RadioButton
            android:id="@+id/rbn_content_News"
            style="@style/style_tab_bottom"
            android:drawableTop="@drawable/tab_news_selector"
            android:checked="true"
            android:text="新闻中心" />
        <RadioButton
            android:id="@+id/rbn_content_SmartServ"
            style="@style/style_tab_bottom"
            android:drawableTop="@drawable/tab_smart_selector"
            android:layout_marginLeft="-10dp"
            android:text="智慧服务" />
        <RadioButton
            android:id="@+id/rbn_content_GovServ"
            style="@style/style_tab_bottom"
            android:drawableTop="@drawable/tab_gov_selector"
            android:text="政务"/>
        <RadioButton
            android:id="@+id/rbn_content_Setting"
            style="@style/style_tab_bottom"
            android:drawableTop="@drawable/tab_setting_selector"
            android:text="设置" />
    </RadioGroup>

</LinearLayout>